<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.connorlay.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_main_digit_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="85sp" />

        <TextView
            android:id="@+id/activity_main_op_display"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="24sp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/activity_main_one_button"
            style="@style/DigitButtonStyle"
            android:text="1" />

        <Button
            android:id="@+id/activity_main_two_button"
            style="@style/DigitButtonStyle"
            android:text="2" />

        <Button
            android:id="@+id/activity_main_three_button"
            style="@style/DigitButtonStyle"
            android:text="3" />

        <Button
            android:id="@+id/activity_main_plus_button"
            style="@style/OpButtonStyle"
            android:text="+" />

        <Button
            android:id="@+id/activity_main_four_button"
            style="@style/DigitButtonStyle"
            android:text="4" />

        <Button
            android:id="@+id/activity_main_five_button"
            style="@style/DigitButtonStyle"
            android:text="5" />

        <Button
            android:id="@+id/activity_main_six_button"
            style="@style/DigitButtonStyle"
            android:text="6" />

        <Button
            android:id="@+id/activity_main_minus_button"
            style="@style/OpButtonStyle"
            android:text="-" />

        <Button
            android:id="@+id/activity_main_seven_button"
            style="@style/DigitButtonStyle"
            android:text="7" />

        <Button
            android:id="@+id/activity_main_eight_button"
            style="@style/DigitButtonStyle"
            android:text="8" />

        <Button
            android:id="@+id/activity_main_nine_button"
            style="@style/DigitButtonStyle"
            android:text="9" />

        <Button
            android:id="@+id/activity_main_multiply_button"
            style="@style/OpButtonStyle"
            android:text="*" />

        <Button
            android:id="@+id/activity_main_zero_button"
            style="@style/DigitButtonStyle"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:text="0" />

        <Button
            android:id="@+id/activity_main_dot_button"
            style="@style/DigitButtonStyle"
            android:text="." />

        <Button
            android:id="@+id/activity_main_divide_button"
            style="@style/OpButtonStyle"
            android:text="/" />

        <Button
            android:id="@+id/activity_main_ac_button"
            style="@style/OpButtonStyle"
            android:layout_columnSpan="3"
            android:layout_columnWeight="3"
            android:text="AC" />

        <Button
            android:id="@+id/activity_main_equals_button"
            style="@style/OpButtonStyle"
            android:text="=" />
    </GridLayout>
</LinearLayout>
