<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalculatorButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">42sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_rowSpan">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="DigitButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="OpButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/orange</item>
    </style>
</resources>
